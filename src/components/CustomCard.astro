---
import { Image } from 'astro:assets';
interface Props {
	title: string;
	body: string;
	href: string;
	styles?: string;
    imageUrl:string;
}

const { href, title, body, styles = '', imageUrl} = Astro.props;
---
<li class={styles}>
    <a href={href}>
    <Image transition:name="image" src={imageUrl} alt="Game card image" width="800" height="600"/>
    <div>
        <h2>{title}</h2>
        <p>{body}</p>
    </div>
    </a>
</li>

<style>
   	.link-card {
		list-style: none;
		display: flex;
        flex-direction: row;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	} 
    .link-card > a {
        display: flex;
        flex-direction: row;
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
</style>