---
import { Image } from 'astro:assets';
interface Props {
	title: string;
	body: string;
	href: string;
	styles?: string;
    imageUrl:string;
}

const { href, title, body, styles = '', imageUrl} = Astro.props;
---
<li class={styles}>
    <a href={href} class="w-full">
		<div class="flex flex-row hover:scale-105 hover:bg-gray-50 transition duration-200 ease-in-out">
		<Image transition:name="image" src={imageUrl} alt="Game card image" width="800" height="600"/>
        <div class="flex flex-col justify-center w-full pl-12">
			<h2 class="text-5xl ">{title}</h2>
			<p class="text-xl mt-8 pl-1 font-light">{body}</p>
		</div>
    </div>
    </a>
</li>

<style>
</style>