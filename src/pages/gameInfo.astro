---
import Layout from '../layouts/Layout.astro';
import Main from '../components/Main.astro';
import { Image } from 'astro:assets';

interface Props {
    title?: string;
}

const { 
	title = "Game",
} = Astro.props;
---

<Layout title={title}>
    <Main>
        <h1 class="my-8 text-4xl font-bold">God of War Ragnarok</h1>
        <Image transition:name="image" src='/gow-poster.png' alt="Game card image" width="1920" height="1080"/>
    </Main>
</Layout>
